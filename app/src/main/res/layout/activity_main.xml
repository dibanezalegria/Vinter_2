<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.vinter_2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <EditText
            android:id="@+id/list_item_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entry"/>

        <EditText
            android:id="@+id/list_item_patient_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"/>

        <EditText
            android:id="@+id/list_item_patient_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_add_dummy_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add patient"/>

        <Button
            android:id="@+id/btn_update_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>

        <Button
            android:id="@+id/btn_delete_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>

        <EditText
            android:id="@+id/et_patient_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"/>

        <EditText
            android:id="@+id/list_item_patient_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code"/>

        <EditText
            android:id="@+id/list_item_test_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"/>

        <EditText
            android:id="@+id/list_item_test_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"/>

        <EditText
            android:id="@+id/list_item_test_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InOut"/>

        <EditText
            android:id="@+id/list_item_test_inout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_add_dummy_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add test"/>

        <Button
            android:id="@+id/btn_update_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>

        <Button
            android:id="@+id/btn_delete_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>

        <EditText
            android:id="@+id/et_test_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/list_view_patients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ListView
            android:id="@+id/list_view_tests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>

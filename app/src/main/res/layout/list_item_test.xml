<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_test_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Id"/>

    <TextView
        android:id="@+id/list_item_test_patient_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="PatId"/>

    <TextView
        android:id="@+id/list_item_test_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Code"/>

    <TextView
        android:id="@+id/list_item_test_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Content"/>

    <TextView
        android:id="@+id/list_item_test_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Status"/>

    <TextView
        android:id="@+id/list_item_test_inout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="InOut"/>

</LinearLayout>